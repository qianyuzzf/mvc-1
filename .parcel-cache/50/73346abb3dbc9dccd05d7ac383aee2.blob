* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
*::before,
*::after {
  box-sizing: border-box;
}

#app1 {
  border: 1px solid red;
  width: 50vw;
  height: 50vh;
}
#app1 #number {
  border: 1px solid black;
  margin-top: 20px;
  margin-left: 5px;
  margin-bottom: 50px;
}

#app1 > button {
  width: 30px;
  height: 30px;
  font-size: 15px;
  margin-left: 100px;
}
