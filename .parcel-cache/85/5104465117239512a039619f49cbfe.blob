#app4 #circle {
  border: 1px solid red;
  width: 25vw;
  height: 25vw;
  margin-top: 5vw;
  margin-left: 10vw;
  border-radius: 50%;
}

@keyframes color {
  0% {
    background-color: #000;
  }
  25% {
    background-color: #444;
  }
  50% {
    background-color: #999;
  }
  100% {
    background-color: #fff;
  }
}

#app4 #circle.active {
  animation: color 3s linear infinite alternate;
}
