* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
*::before,
*::after {
  box-sizing: border-box;
}

#app1 {
  border: 1px solid red;
  width: 50vw;
  height: 50vh;
}
#app1 #number {
  border: 1px solid black;
  margin: 3vh 3vw;
}

#app1 > button {
  width: 5vw;
  height: 5vh;
  font-size: 2vw;
  margin-left: 2vw;
}
